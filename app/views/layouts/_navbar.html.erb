<div class="navbar fixed top-0 bg-base-100/40 pl-12 pr-36">
  <div class="flex-1">
    <div class="home-link text-4xl text-center align-baseline pt-1 mr-2 h-12 w-32 text-white bg-gray-200/60 hover:bg-gray-400/60
      focus:ring-4 focus:ring-blue-300 rounded-lg dark:bg-blue-600
      dark:hover:bg-blue-700 focus:outline-none dark:focus:ring-blue-800 hover:cursor-pointer">
      <%= link_to "✈️ 👀", root_path %>
    </div>
  
    <div class="flex-none">
      <% unless flash.empty? %>
        <%= render '/layouts/flash' %>
      <% end %>  
    </div>

    <div>
      <%= "**** Here are your params #{params}" %>
    </div>
  </div>


  <div class="flex-none">
    <ul class="menu menu-horizontal px-1">
      <% if passenger_signed_in? %>
        <% if current_passenger.owned_bookings.present? %>
          <li> <%= link_to "Owned bookings", bookings_path %></li>
        <% end %>
        <li><%= link_to "Edit Profile", edit_passenger_registration_path, class: "" %></li>
        <li><%= button_to "Logout", destroy_passenger_session_path, method: :delete, class: "" %></li>
      <% else %>
        <li><%= link_to "Login", new_passenger_session_path, class: "" %></li>
        <li><%= link_to "Sign up", new_passenger_registration_path, class: "" %></li>
      <% end %>
    </ul>
  </div>
</div>
