<% Rails.logger.debug "Rendering _arrival_airport_options.html.erb with airports: #{@airports}" %>
<%= label_tag :arrival_airport_id, "Arrival Airport", class: "font-label font-medium col-start-1 col-end-2" %>
<%= select_tag :arrival_airport_id, options_from_collection_for_select(
  @arrival_airports,
  'id',
  :formatted_airport_name_label,
  selected: params[:arrival_airport_id]),
  prompt: 'Select Arrival Airport',
  required: true, class: "font-label font-medium col-start-2 col-end-3 rounded bg-slate-100",
  data: { "flight-search-form-target": "arrival_airport",
  action: "change->flight-search-form#updateDepartureDates" } %>


