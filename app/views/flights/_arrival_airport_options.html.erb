<% Rails.logger.debug "Rendering _arrival_airport_options.html.erb with airports: #{@airports}" %>
<%= label_tag :arrival_airport_id, "Arrival airport",class: "col-start-1 col-end-2" %>
<%= select_tag :arrival_airport_id, options_from_collection_for_select(@arrival_airports, 'id', lambda do |airport|
    if airport.name.include?(airport.city)
      airport_label = airport.name
    else
      airport_label = airport.city + ' - ' + airport.name
    end
    "#{airport_label}"
  end), prompt: 'Select Arrival Airport', required: true, class: "col-start-2 col-end-3 rounded",
  data: { "flight-search-form-target": "arrival_airport",
  action: "change->flight-search-form#updateDepartureDates" } %>


